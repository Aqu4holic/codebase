<snippet>
	<content><![CDATA[const int MOD = 1e9 + 7;
int fast_pow(int a, int b){
	int res = 1;

	for (; b; b /= 2){
		if (b & 1){
			((res *= a) %= MOD);
			b--;
		}

		((a *= a) %= MOD);
	}

	return res;
}
int phi(int x){
	int res = x;

	for (int i = 2; i * i <= x; i++){
		if (x % i == 0){
			while(x % i == 0){
				x /= i;
			}

			res -= res / i;
		}
	}
	if (x > 1) res -= res / x;

	return res;
}
int inv(int x) {return fast_pow(x, phi(MOD) - 2);}
int add(int &a, int b) {(a += b) %= MOD; return a;}
int sub(int &a, int b) {(a -= b - MOD) %= MOD; return a;}
int mul(int &a, int b) {(a *= b) %= MOD; return a;}
int div(int &a, int b) {(a *= inv(b)) %= MOD; return a;}]]></content>
	<tabTrigger>MODNUM</tabTrigger>
	<description>Calculate numbers with MOD for C++</description>
</snippet>
